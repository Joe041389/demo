
@{
    Layout = null;
}

<!DOCTYPE html>

<html >
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>AngularPage</title>
</head>
<body>
    <div id="content" ng-app="Homeapp" ng-controller="HomeController">
        <h2>Get All Data</h2>
        <div id="appheader">{{decription}}{{dt}}</div>
        <input type="button" class="btn btn-primary" ng-click="LoadData()" value="{{BtnText}}" />
        <table class="table table-striped">
            <tr ng-repeat="item in datalist">
                <td>{{item}}</td>

            </tr>
        </table>

    </div>

    <script src="~/Scripts/angular.js"></script>
    <script src="~/js/UseAngular.js"></script>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
