@model ToDoPj.Models.tToDo

@{
    ViewBag.Title = "更新代辦事項";
}

<h2>更新代辦事項</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.fId)

        <div class="form-group">
            @Html.LabelFor(m => m.fTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.fTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.fTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">圖示</label>
            @*@Html.LabelFor(model => model.fImage, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                <select id="fImage" name="fImage" class="form-control">
                    <option value="0.png" @(Model.fImage=="0.png"? "selected":"")>重要</option>
                    <option value="1.png" @(Model.fImage=="1.png"? "selected":"")>普通</option>
                </select>
                @*@Html.EditorFor(model => model.fImage, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.fImage, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="更新" class="btn btn-default" />
            </div>
        </div>
    </div>
}

