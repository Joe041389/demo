@model WebAPI_Demo.Models.tCustomer
@{
    ViewBag.Title = "Edit";
}

<h2>編輯</h2>
<div class="panel panel-primary">
    <div class="panel-body">
        <div class="form-group">
            <label for="fname">編號</label>
            <input type="text" class="form-control" id="fId" value="@Model.fId" readonly>
        </div>
        <div class="form-group">
            <label for="fname">姓名</label>
            <input type="text" class="form-control" id="fname" value="@Model.fName" required>
        </div>
        <div class="form-group">
            <label for="fphone">電話</label>
            <input type="text" class="form-control" id="fphone" value="@Model.fPhone" required>
        </div>
        <div class="form-group">
            <label for="femail">信箱</label>
            <input type="email" class="form-control" id="femail" value="@Model.fEmail" required>
        </div>
        <div class="form-group">
            <label for="faddress">地址</label>
            <input type="text" class="form-control" id="faddress" value="@Model.fAddress" required>
        </div>
        <input type="button" value="更新" id="btnEdit" class="btn btn-success" />
    </div>
</div>

<script src="~/js/edit.js"></script>